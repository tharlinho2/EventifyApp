<tr class='border-top'>
    <td>
        <span class="text-primary pe-1"> >> </span>
        <%= event.description %>
    </td>

    <td><%= l event.starts_at %></td>
    <td><%= l event.ends_at %></td>

    <td class="text-right" style="padding-right: 0px;">
        <%= link_to 'Editar', edit_event_path(event), class: 'btn btn-secondary btn-sm' %>
        <%= link_to 'Apagar', event, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Tem certeza?' } %>
    </td>
</tr>