<%= form_with(model: event, local: true) do |form| %>
  <div class="form-group mb-3">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="col-md-4">
    <%= form.text_area :description, placeholder: "Descrição" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :starts_at, style: "display: block" %>
    <%= form.date_select :starts_at %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :ends_at, style: "display: block" %>
    <%= form.date_select :ends_at %>
  </div>

  <%= form.submit class: 'btn btn-primary', data: { disable_with: 'Salvando...' } %>
  <%= link_to 'Cancelar', events_path, class: 'btn btn-light' %>
<% end %>
